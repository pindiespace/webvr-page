{
  "scripts": {
    "preinstall": "npm i -g bower copyfiles rimraf mkdirp browserify uglify mocha",
    "build-three": "bower install threejs",
    "build-lib": "copyfiles -f bower_components/three.js/build/three.min.js bower_components/three.js/examples/js/controls/VRControls.js bower_components/three.js/examples/js/effects/VREffect.js node_modules/webvr-polyfill/build/webvr-polyfill.js js/lib",
    "build-app": "browserify src/main.js | uglifyjs > js/webvr-page.js",
    "build": "npm run build-lib && npm run build-app",
    "buildall": "npm install webvr-polyfill && npm run build-three && npm run build-lib && npm run build-app",
    "lint": "cat src/*.js | jscs",
    "test": "mocha test",
    "start": "node server.js",
    "clean": "rimraf js"
  },
  "devDependencies": {
    "webvr-polyfill": "latest",
    "jshint": "latest",
    "serve-favicon": "latest",
    "express": "latest",
    "grunt": "latest",
    "grunt-cli": "latest",
    "grunt-contrib-copy": "latest",
    "grunt-ftp-push": "latest",
    "copyfiles": "latest"
  }
}
